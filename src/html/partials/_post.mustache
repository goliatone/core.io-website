          <!-- MODULE POST -->
          <div class="post cols">
            <div>
              <!-- POST TITLE, VERSION and DESCRIPTION -->
              <div class="row row-vCentered">
                <div class="title h-small">
                  <a href="">{{title}}</a>
                </div>
                <div class="tag">
                  <span>v{{version}}</span>
                </div>
              </div>
              <div class="row">
                <div class="description p-medium-1">
                  <p>{{description}}</p>
                </div>
              </div><!-- END POST DESCRIPTION -->
            </div>

            <!-- POST LABELS AND ACCES ICON -->
            <div class="row">
              <div class="labels row">
                {{#labels}}
                  {{>_label}}
                {{/labels}}
              </div>

              <div class="author tag">
                <span><span class="p-smallest">by</span> {{author}}</span>
              </div>
            </div><!-- POST LABELS AND ACCES ICON -->
          </div><!-- END MODULE POST -->
